#!/usr/bin/env bash

WORDS=2
NAME=()
NUM=0

WORD_CMD="shuf -n1  /usr/share/dict/words | tr '[:upper:]' '[:lower:]'"
NUM_CMD="shuf -i 100-1000 -n 1"

function join { local IFS="$1"; shift; echo "$*"; }
usage() { echo "Usage: $0 [ -n NUMBER_OF_WORDS ] [ -i --include-num ]" 1>&2; }

while getopts "n:ih" opt; do
    case "${opt}" in
        h) usage
            exit 0
            ;;
        n)
            WORDS=${OPTARG}
            ;;
        i)
            NUM=1
            ;;
        \?) usage 
            exit 1
            ;;
    esac
done
shift $((OPTIND -1))

COUNT=0
while [ $COUNT -lt $WORDS ]; do 
    NAME+=(`eval ${WORD_CMD}`)
    let COUNT+=1
done

if [ $NUM -gt 0 ]
then
    NAME+=(`eval ${NUM_CMD}`)
fi

join - "${NAME[@]}"
exit 0
